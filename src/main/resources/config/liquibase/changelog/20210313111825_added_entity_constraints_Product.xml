<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Product.
    -->
    <changeSet id="20210313111825-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="brand_id"
                                 baseTableName="product"
                                 constraintName="fk_product_brand_id"
                                 referencedColumnNames="id"
                                 referencedTableName="brand"/>

        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="product_categories"
                                 constraintName="fk_product_categories_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>

        <addForeignKeyConstraint baseColumnNames="categories_id"
                                 baseTableName="product_categories"
                                 constraintName="fk_product_categories_categories_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>
        
        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="product_attribute_entry"
                                 constraintName="fk_product_attribute_entry_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>

        <addForeignKeyConstraint baseColumnNames="attribute_entry_id"
                                 baseTableName="product_attribute_entry"
                                 constraintName="fk_product_attribute_entry_attribute_entry_id"
                                 referencedColumnNames="id"
                                 referencedTableName="attribute_entry"/>
        
    </changeSet>
</databaseChangeLog>
